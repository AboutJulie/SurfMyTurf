<% if notice.present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice.html_safe %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<%= link_to "Home", root_path, class: 'btn btn-secondary' %>

<h1>Discover <%= @surfboard.name %></h1>

<h3><%= @surfboard.category %></h3>

<% if @surfboard.photo.attached? %>
<%= cl_image_tag @surfboard.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<% end %>

<p> <%= @surfboard.description %> </p>

<%= link_to "Book now", new_surfboard_booking_path(@surfboard), class: 'btn btn-primary' %>





