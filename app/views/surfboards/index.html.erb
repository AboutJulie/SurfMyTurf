
<div class="header-index">
  <p>We have found <strong><%= @filtered_surfboards.count %> Boards</strong>  matching your search</p>
  <% if params[:surfboard][:location].empty? %>
    <h1> Surfboards for rent around the world: </h1>
  <%else%>
    <h1>Surfboards in <%= params[:surfboard][:location] %> </h1>
  <%end%>
</div>

<% @filtered_surfboards.each do |surfboard| %>
  <%= link_to surfboard_path(surfboard) do %>
  <div class="card-product">
    <% if surfboard.photo.attached? %>
      <%= cl_image_tag surfboard.photo.key, crop: :fill %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1472858174223-94efa51c7ae2?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80"/>
    <% end %>
    <div class="card-product-infos">
      <h2><%= surfboard.name %></h2>
      <p><strong><%= surfboard.category.capitalize %></strong></p>
      <p><%= surfboard.price %>â‚¬ per day</p>
      <p><%= surfboard.location %>
      <p>LAT: <%= surfboard.latitude %> | LONG: <%= surfboard.longitude%>
    </div>
  </div>
  <% end %>
<% end %>
